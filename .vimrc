execute pathogen#infect()

colorscheme solarized 
set background=dark
syntax on

set number
set expandtab
set shiftwidth=4
set softtabstop=4
set autoindent smartindent

set showmatch
set autoread
set nocompatible
set scrolloff=5
set sidescrolloff=5
set cmdheight=2
set noerrorbells
set shell=bash

set smartcase
set ignorecase

set wildignore+=*/tmp/*,*.so,*.swp,*.zip,*.class,*.DS_Store,*/.git/*,*/.hg/* 

set guifont=Menlo\ Regular:h12

filetype plugin indent on
set ofu=syntaxcomplete#Complete
